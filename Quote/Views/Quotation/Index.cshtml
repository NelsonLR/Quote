@model IEnumerable<Quote.Models.Quotation>

@{
    ViewBag.Title = "Index";
}
@using GridMvc.Html

<h2>Index</h2>

<p>
    @Html.ActionLink("Create Quote", "Create")
    &nbsp; &nbsp;
    @Html.ActionLink("Create Category", "CreateCategory")
</p>

<p>
    @using (Html.BeginForm())
    {
        @Html.TextBox("filter")
        <input type="submit" value="Search"/>
    }

    @Html.ActionLink("Display All", "Index")
</p>

<p>
    @if (Model.Count() == 0)
    {
        @("No matches!");
    }
    @Html.Grid(Model).Columns(columns =>
                    {
                        columns.Add(Quotation => Quotation.Category.Name).Titled("Category").SetWidth(15).Sortable(true);
                        columns.Add(Quotation => Quotation.Author).Titled("Author").SetWidth(20).Sortable(true);
                        columns.Add(Quotation => Quotation.Quote).Titled("Quote");
                        columns.Add(Quotation => Quotation.Date).Titled("Date").SetWidth(20).Sortable(true).Format("{0:MM/dd/yyyy}");
                        columns.Add().Encoded(false).Sanitized(false).SetWidth(30).RenderValueAs(Quotation => @<input type="button" class="my-button" value="" name="Hide"
                                                                                                                      onclick="location.href= '@Url.Action("Hide", "QuotationController", new { id = Quotation.QuotationID })'" />);
                    })
    
    
</p>